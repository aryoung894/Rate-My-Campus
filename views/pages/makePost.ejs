        <br>
        <form action="/processPost" data-ajax="false" method="POST" class="ui form" style="width: 800px">
            <div class="field">
                <label class="formField">Title</label>
                <input type="text" name="title" placeholder="Create Title">
            </div>
            <br>
            <div class="field">
            	 <label class="formField">Content of Post</label>
                <div id="textEdit" type="text/html"></div>
            </div>
            <div class="field" style="display: none">
                 <input type="text" name="blogUrl" value="<%= param %>">
            </div>
            <br>
            <br>
            <button class="ui button posButtons" style="float: left" type="submit">Create</button>
        </form>	
    </center>
